<Page x:Class="WpfApp1.Views.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="Auth">
    <Grid>
        <TextBlock Text="Логин: " Height="15" Width="50" Margin="75,49,175,136"/>
        <TextBox Name="Login" TextWrapping="Wrap" Height="20" Width="150" Margin="75,65,75,115"></TextBox>

        <TextBlock Text="Пароль: " Height="15" Width="50" Margin="75,90,175,95"/>
        <TextBox Name="Password" TextWrapping="Wrap" Height="20" Width="150" Margin="75,111,75,69"></TextBox>

        <Button Content="Войти" Height="20" Width="100" Background="White" Margin="100,136,100,44" Click="Authorize"/>
        <Button Content="Зарегистрироваться" Height="20" Background="White" Margin="88,161,88,19" Click="ToRegistration"/>
    </Grid>
</Page>
